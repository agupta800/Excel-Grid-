@using static AsterWebApp.Helpers.NavigationIndicatorHelper;
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/Home" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">Aster-MCS</span>
    </a>
    <div class="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">Hi, @User.Identity.Name </a>
                </div>
            </div>
        }
        else
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">Hi, Visitor</a>
                </div>
            </div>
        }
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item ">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("home","index")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Home
                        </p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a asp-area="Cms" asp-controller="Page" asp-action="PageSection" asp-route-id="Menu" class="nav-link @Url.MakeActiveClass("Page","PageSection")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Menu
                        </p>
                    </a>
                </li>

                <li class="nav-item ">
                    <a asp-area="Cms" asp-controller="PageContents" asp-action="EditPageContent" asp-route-id="POPUP" class="nav-link @Url.MakeActiveClass("PageContents","EditPageContent")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            PopUp
                        </p>
                    </a>
                </li>
                @*  <li class="nav-item ">
                <a asp-area="Cms" asp-controller="Categories" asp-action="grid" class="nav-link @Url.MakeActiveClass("Categories","grid")">
                <i class="nav-icon fas fa-home"></i>
                <p>
                Menu-Products
                </p>
                </a>
                </li>
                <li class="nav-item ">
                <a asp-area="Cms" asp-controller="Products" asp-action="Index" class="nav-link @Url.MakeActiveClass("Products","Index")">
                <i class="nav-icon fas fa-home"></i>
                <p>
                Products-List
                </p>
                </a>
                </li>

                <li class="nav-item ">
                <a asp-area="Cms" asp-controller="Products" asp-action="AddProductCategory" class="nav-link @Url.MakeActiveClass("Products","AddProductCategory")">
                <i class="nav-icon fas fa-home"></i>
                <p>
                Add-Products
                </p>
                </a>
                </li> *@

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Privacy" class="nav-link @Url.MakeActiveClass("home","privacy")">
                            <i class="nav-icon fas fa-lock"></i>
                            <p>
                                Privacy
                            </p>
                        </a>
                    </li>

                }
            </ul>
        </nav>
    </div>
</aside>